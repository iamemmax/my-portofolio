<script>
   const  proBtn = document.querySelector(".portofolio_links")
const link = document.querySelectorAll(".link1 ")
const projectName = document.querySelectorAll(".projects")


link.forEach(data =>{
    data.addEventListener("click", (e)=>{
        proBtn.querySelector(".active").classList.remove("active")
        data.classList.add("active")
        
        let projectBtn = data.getAttribute("data-select")
    
        projectName.forEach(project =>{


          let projectImg =  project.getAttribute("data-select")

            if(projectBtn === projectImg ||  projectBtn === "all"){
                project.classList.remove("hide")
                project.classList.add("show")
                
            }else{
                project.classList.remove("show")
                project.classList.add("hide")



            }
        })

    })
})

</script>